<div class="card mb-4" >
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property , 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 300px; height: 150px;">
    {% endif %}
<div class="card-body">


<h5 class="card-title">

<a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
{{ property.title}}
</a>
</h5>
<p class="card-text">{{ property.surface }}M2 {{ property.city }} {{ property.postalCode }} </p>
<div class="text-primary"style= "font-size: 2em; font-weight: bold;">
{{ property.formattedPrince}} $
</div>

</div>

</div>