{% extends 'base.html.twig' %}

{% block title %}Hello you{% endblock %}

{% block body %}
  <h1>Connexion sur l'espace User</h1>



<form action="{{ path('security_login')}}" method="POST">
<div class="form-group">
    <input placeholder="Votre nom" required name="_username" type="text" class="form-control">
</div>
<div class="form-group">
    <input placeholder="Votre mot de passe" required name="_password" type="password" class="form-control">
</div>
<div class="form-group">
    <button type="submit" class="btn btn-success">Connexion</button>

</div>
</form>


{% endblock %}