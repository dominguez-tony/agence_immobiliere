{%extends 'base.html.twig'%}
{% block body %}

<div class= "jumbotron text-center mt-4">
<h1> Gérer les options </h1>
</div>


<div class= "container mt-4">
<h2>Gestion des options</h2>


{% for message in app.flashes('success') %}

<div class="alert alert-success" style="text-align: center;">
{{ message }}
</div>


{% endfor %}


 <table class="table table-striped">
 <thead> 
 <tr> 
  <th> Nom </th>
    <th> Actions </th>

 </tr> </thead>
  <tbody> 
  
{% for opt in opts %}

  <tr>
<td> {{ opt.name }} </td>
<td> 
   <a href="{{ path('admin.opt.edit', {id: opt.id}) }}" class="btn btn-secondary">Editer</a>
   <form method="post" action=" {{ path('admin.opt.delete', {id: opt.id, _csrf_token: csrf_token('delete')}) }} " style="display: inline-block;" onsubmit="return confirm('Etes vous sur?')">
   <input type="hidden" name="_method" value="DELETE"> 
       <input type="hidden" name="_csrf_token" value=" {{ csrf_token('delete') }} ">
  <button class="btn btn-danger">Supprimer</button>
   </form>
 </td>
</tr>
{% endfor %}
  
   </tbody>
   </table>
<div class="text-right">
   <a href="{{ path('admin.opt.new') }}" class="btn btn-primary">Créer un nouveau bien</a>


</div>

</div>




{% endblock %}